<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="@dimen/button_size"
                android:height="@dimen/button_size"/>
            <solid android:color="@color/primary_light_alpha"/>
            <stroke android:color="@color/primary"
                android:width="@dimen/button_stroke_width"/>
            <corners android:topLeftRadius="@dimen/button_radious"
                android:bottomLeftRadius="@dimen/button_radious"
                android:bottomRightRadius="@dimen/button_radious"
                android:topRightRadius="@dimen/button_radious" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <size android:width="@dimen/button_size"
                android:height="@dimen/button_size"/>
            <solid android:color="#0fff"/>
            <stroke android:color="@color/primary"
                android:width="@dimen/button_stroke_width"/>
            <corners android:topLeftRadius="@dimen/button_radious"
                    android:bottomLeftRadius="@dimen/button_radious"
                    android:bottomRightRadius="@dimen/button_radious"
                    android:topRightRadius="@dimen/button_radious" />
        </shape>
    </item>
</selector>